<h1>BOIGERS!!</h1>

<h2>EAT DA BURGER</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Full?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured<br>
    <input type="radio" name="devoured" value="0"> Hungry?
  </div>

  <button type="submit">Add Burger</button>
</form>
